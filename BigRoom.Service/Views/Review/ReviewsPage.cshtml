<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Product Reviews</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Showing all unapproved reviews
            </div>
            <div class="panel-body">
                <div class="dataTables_wrapper">
                    <table class="table table-striped table-bordered table-hover dataTable text-nowrap" id="reviews-table">
                        <thead>
                            <tr>
                                <th>Posting Date</th>
                                <th>Product</th>
                                <th>User</th>
                                <th>Title</th>
                                <th>Comment</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: reviews">
                            <tr>
                                <td data-bind="text: date"></td>
                                <td data-bind="text: product"></td>
                                <td data-bind="text: user"></td>
                                <td data-bind="text: title"></td>
                                <td data-bind="text: comment"></td>
                                <td data-bind="text: rating"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div id="templates" style="display: none">
        </div>
    </div>
</div>