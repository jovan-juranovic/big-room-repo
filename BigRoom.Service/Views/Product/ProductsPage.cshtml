<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Products</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <button data-bind="click: add" class="btn btn-warning center-block">Add New</button>
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="products-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Shipping Price</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: products">
                            <tr>
                                <td class="text-center">
                                    <button data-bind="click: edit" class="btn btn-primary btn-circle"><i class="fa fa-edit fa-fw"></i></button>&nbsp;&nbsp;
                                    <button data-bind="click: remove" class="btn btn-primary btn-circle"><i class="fa fa-remove fa-fw"></i></button>
                                </td>
                                <td data-bind="text: name"></td>
                                <td data-bind="text: description"></td>
                                <td data-bind="text: category"></td>
                                <td data-bind="text: price"></td>
                                <td data-bind="text: shippingPrice"></td>
                                <td data-bind="text: status"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div id="templates" style="display: none">
            @Html.Partial("AddEditProduct")
            @Html.Partial("ConfirmDialogTemplate")
        </div>
    </div>
</div>